@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<img src="/Content/loader.gif" class="hidden"/>
<div class="loadingbackground hidden loading"></div>
<div class="loading loadingpopup hidden" id="loading_popup">
  <div class="closing_button"><span>x</span></div>
  <div class="content"></div>
</div>

<div id="root">
  <div class="container active-page" id="splashscreen">
    <div class="header clearfix"><h1>Presenting</h1></div>
    <div class="content">Ziftly</div>
    <div class="footer">
        gifting app
    </div>
  </div>
  <div id="loginpage" data-title="Ziftly - Login"  class="container bodypage">
    <div class="header clearfix"><h1>Login</h1></div>
    <div class="content">
      <h1 style="text-align:center">Start giving a gift right now!</h1>
      
      <div style="margin-top:4em;text-align:center">You need to login with facebook!</div>
      <div style="margin-top:4em">
        <p><a class="first last fbloginbutton button">Login</a></p>
      </div>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>

  <div id="selectrcptpage" data-title="Ziftly - Who is the gift for?"  class="container bodypage">
    <div class="header clearfix"><h1>Who is the gift for?</h1></div>
    <div class="content">
      <h1 style="text-align:center;margin-top:1em;">Select your friend</h1>
      
      
      <ul class="listview" id="recipientlist-items" style="margin-top:1em;">
        <li>LOADING!!!!!!!!!!</li>
      </ul>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>


  <div id="selectgiftpage" data-title="Ziftly - What's your gift?"  class="container bodypage">
    <div class="header clearfix"><h1>What's your gift?</h1></div>
    <div class="content">
      <h1 style="text-align:center;margin-top:1em;">Choose item</h1>
      <ul class="listview" id="giftsuggestionslist-items" style="margin-top:1em;">
        <li>LOADING!!!!!!!!!!</li>
      </ul>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>
  


  <div id="sendconfirmpage" data-title="Ziftly - Send the Gift"  class="container bodypage">
    <div class="header clearfix"><h1>Send the Gift</h1></div>
    <div class="content">
      <ul style="margin-top:2em;" id="gift-info" class="listview"></ul>
      <div class="hidden">
        <h1 style="text-align:center;margin-top:2em;">enter an email address!</h1>
        <div style="margin-top:1em;text-align:center"><input type="email" placeholder="email address" name="email" id="rcpt-emailaddress" value-"" /></div>
      </div>
      <div style="margin-top:4em">
        <p><a class="first last sendgiftbutton button">send now</a></p>
      </div>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>

  <div id="sentsuccesspage" data-title="Ziftly - Gift Sent Successfully"  class="container bodypage">
    <div class="header clearfix"><h1>Gift Sent Successfully</h1></div>
    <div class="content">
      
      <div style="margin-top:1em;text-align:center">
        <span class="recipientname"></span> is going to love your <span class="giftname"></span>!
      </div>
      <div style="margin-top:1em;text-align:center">
        We will email you as soon as they have got it.
      </div>
      <div style="margin-top:4em">
        <p><a href="#home" class="button first last returnhome">Back to Start</a></p>
      </div>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>
  
    <div id="redeempage" data-title="Ziftly - Redeem Your Gift"  class="container bodypage">
    <div class="header clearfix"><h1>Redeem Your Gift</h1></div>
    <div class="content">
      <ul style="margin-top:2em;" id="gift-redeem-info" class="listview"></ul>
      <div style="margin-top:4em">
        <p class="hideable loadingsplashdisplay">loading..............</p>
        <p><a class="hideable button first last redeemgift hidden">Redeem Now</a></p>
        <p><a class="hideable button first last fbloginbutton hidden">Login please</a></p>
        <p><a href="#home" class="hideable button first last pleasegoaway hidden">This is not for you, please go away!</a></p>
      </div>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>

    <div id="redemptionpage" data-title="Ziftly - Redeem Your Gift"  class="container bodypage">
    <div class="header clearfix"><h1>Redeem Your Gift</h1></div>
    <div class="content">
      <h1>Below find the redemption code, make sure to show this to the cashier:</h1>
      <ul class="listview" style="margin-top:2em;">
        <li class="listbutton"><span class="label">Code: <span class="couponcode"><pre>loading</pre></span></span></li>
      </ul>
      <div style="margin-top:4em">
        <p><a href="#home" class="button first last hideable hidden">Done</a></p>
      </div>
    </div>
    <div class="footer">
        gifting app
    </div>
  </div>



</div>

<script type="text/template" id="gift-listitem-template">
  <a class="listbutton">
    <span class="label first last"><%= name %></span><span class="rarrow">&raquo</span>
  </a>
</script>
<script type="text/template" id="friend-listitem-template">
  <a class="listbutton">
    <span class="label first last"><img class="floatLeft" style="margin-right:1em;" src="<%= pic_square %>"/><%= name %> (<%= birthday_date %>)</span><span class="rarrow">&raquo</span>
  </a>
</script>
<script type="text/template" id="gift-display-template">
    <li><h1>Send</h1></li>
    <li>
      <span class="listbutton deactive">
          <span class="label first last"><img class="floatLeft" style="margin-right:1em;" src="<%= recipient.pic_square %>"/><%= recipient.name %></span>
      </span>
    </li>
    <li><h1>an awesome</h1></li>
    <li>
      <span class="listbutton deactive">
          <span class="label first last"><%= product.name %></span>
      </span>
    </li>
</script>

<script type="text/template" id="gift-redeem-display-template">
    <li>
      <span class="listbutton deactive">
          <span class="label first last"><img class="floatLeft" style="margin-right:1em;" src="<%= sender.pic_square %>"/><%= sender.name %></span>
      </span>
    </li>
    <li><h1>has sent you an awesome</h1></li>
    <li>
      <span class="listbutton deactive">
          <span class="label first last"><%= product.name %></span>
      </span>
    </li>
</script>